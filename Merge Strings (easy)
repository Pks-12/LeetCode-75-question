class Solution {
public:
    string mergeAlternately(string word1, string word2) {
        int i=0,j=0;
        int a = word1.length();
        int b = word2.length();
        string result="";
        while(i<a || j<b){
            if(i<a) 
                result+=word1[i++];
                if(j<b)
                    result+=word2[j++];
        }
        return result;
    }
};
